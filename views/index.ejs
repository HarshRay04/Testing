<html lang="en" class="h-100 hydrated" data-bs-theme="dark">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Rent Due Tracker</title>

  <meta name="theme-color" content="#712cf9">

  <style>
    .cover-container {
      background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.4)),
        url("/assets/p2.png") no-repeat center center fixed;
      background-size: cover !important;
      color: #fff;
      border-radius: 12px;
      padding: 2rem;
    }

    /* Navbar tweaks */
    .nav-masthead .nav-link {
      color: #fff;
      margin: 0 15px;
      font-weight: 600;
      transition: all 0.2s ease-in-out;
    }

    .nav-masthead .nav-link:hover {
      color: #fff;
      text-shadow: 0 0 8px #ffffff, 0 0 15px #712cf9;
      transform: scale(1.05);
    }

    .nav-masthead .active {
      border-bottom: 2px solid #712cf9;
    }

    /* Stylish buttons */
    .btn-light,
    .role-btn {
      transition: all 0.3s ease-in-out;
    }

    .btn-light:hover,
    .role-btn:hover {
      box-shadow: 0 0 10px #ffffff, 0 0 20px #712cf9;
      transform: scale(1.05);
    }
  </style>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body class="d-flex h-100 text-center">

  <div class="cover-container d-flex w-100 p-3 mx-auto flex-column">
    <header class="mb-auto">
      <div>
        <h3 class="float-md-start mb-0 fw-bold">
          <a href=" /" class="float-md-start mb-0 fw-bold text-decoration-none nav-link fw-bold">Rent Due Tracker</a>
        </h3>
        <nav class="nav nav-masthead justify-content-center float-md-end">

          <%- include("overlay.ejs") %>
          <a class="nav-link fw-bold py-1 px-0" href="https://tejanshu.me/Systumm">Contact US</a>
        </nav>
      </div>
    </header>

    <main class="px-3">
      <h1 class="fw-bold">Rent Due Tracker</h1>
      <p class="lead">Building trust between user and customer</p>
      <p class="lead">
        <% if (k==0) { %>
        <!-- Show selection buttons if no role chosen -->
        <div class="text-center mb-4">
          <a href="/setRole/owner" class="btn btn-primary role-btn me-3">I am Owner</a>
          <a href="/setRole/tenant" class="btn btn-success role-btn">I am Tenant</a>
        </div>
        <% } else if (k==1) { %>
        <!-- Owner view -->

        <a href="/setRole/reset" class="btn btn-warning btn-sm mt-3">Switch Role</a>
        <% } %>
      </p>
      <p style="text-align: center;">Already a User</p>
      <a href="/login" class="btn btn-lg btn-light fw-bold border-white bg-white">LOGIN</a>
    </main>

    <footer class="mt-auto text-white-50">
      <p>
        Developed by
        <a href="https://tejanshu.me/Systumm" class="text-white">Systumm</a>, by
        <a href="https://x.com/mdo" class="text-white">@engiNeers</a>.
      </p>
    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous">
  </script>
</body>

</html>